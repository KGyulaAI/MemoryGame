<Window x:Class="MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memóriajáték" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TimerTextBlock" FontSize="16" Margin="10" HorizontalAlignment="Left"/>
        <UniformGrid x:Name="CardGrid" Rows="4" Columns="4" Grid.Row="1" Margin="10"/>
        <Button x:Name="NewGameButton" Content="Új játék" Grid.Row="2" Margin="10" Click="NewGameButton_Click"/>
    </Grid>
</Window>
